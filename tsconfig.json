{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@components/*": [
        "src/app/main/components/*"
      ],
      "@services/*": [
        "src/app/main/services/*"
      ],
      "@models/*": [
        "src/app/main/models/*"
      ],
      "@views/*": [
        "src/app/main/views/*"
      ],
      "@core/*": [
        "src/app/core/*"
      ],
      "@root-store/*": [
        "src/app/root-store/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
